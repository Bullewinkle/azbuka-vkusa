*
	margin: 0
	padding: 0

html
	margin: 0 auto

body
	font-family "Gill Sans"
	
img
.img
	max-width: 100%

button
input[type=submit]
input[type=button]
	border none
	outline none
	box-shadow none
	padding: 11px 35px
	font-size: 15px
	line-height: 24px

	&.s-green
	&.s-action
		background: linear-gradient(top, #61902a,#4c721f)
		color: white

.sprite-bg
	background-image url('/assets/img/sprite.png')
	background-repeat no-repeat


.container-fluid
	max-width: 1280px

.l-main
	padding-bottom: 20px
	& > *
		position: relative
		background-position center
		background-repeat: no-repeat



.logo
	&.m-main
		img
			width: 355px
		@media screen and (max-width: $screen-xs-max)
			padding-left: 10px
			text-align: center
		@media screen and (min-width: $screen-sm-min)
			padding-left: 10px
			width: 300px
		@media screen and (min-width: $screen-md-min)
			padding-left: 30px

.credits
	margin-top: 110px
	padding: 0 10px
	& > *
		display: inline-block

	.text
		font-size: 12px

	.qualification
		position: relative
		top: -2px
		margin: 10px
		width: 38px
		height: 38px
		text-align: center
		line-height: 38px
		border-radius 100px
		box-shadow 0px -12px 110px -57px #000 inset
		@media screen and (min-width: $screen-sm-min)
			margin-right: 140px
