img
.img
	max-width: 100%

.sprite-bg
	background-image url('/assets/img/sprite.png')
	background-repeat no-repeat

.icon
	@extend .sprite-bg

	&.m-heart
		background-position 0 -7px
		width: 45px
		height: 40px
	&.m-beaf
		background-position -127px -5px
		width: 47px
		height: 45px
	&.m-house
		background-position -248px -5px
		width: 60px
		height: 45px
	&.m-cart
		background-position -380px 0
		width: 50px
		height: 54px

.credits
	margin-top: 110px
	padding: 0 10px
	& > *
		display: inline-block
		
	.text
		font-size: 12px

	.qualification
		position: relative
		top: -2px
		margin: 10px
		width: 38px
		height: 38px
		text-align: center
		line-height: 38px
		border-radius 100px
		box-shadow 0px -12px 110px -57px #000 inset
		@media screen and (min-width: $screen-sm-min)
			margin-right: 140px
